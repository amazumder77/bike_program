{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*", "src/**/*.json", "**/*.e2e-spec.ts"],
  "exclude": ["node_modules", "dist", "knex/templates"]
}
