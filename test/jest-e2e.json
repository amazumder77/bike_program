{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!**/*.spec.ts",
    "!src/main.ts",
    "!**/*.mock.ts"
  ],
  "coverageDirectory": "./e2e-coverage"
}
